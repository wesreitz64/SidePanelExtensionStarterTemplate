{
    "manifest_version": 3,
    "name": "Sliding Side Panel",
    "version": "1.0",
    "description": "A Chrome extension with a sliding side panel.",
    "permissions": [
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_icon": "sidepanel.png",
      "default_title": "Open Side Panel"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }
  